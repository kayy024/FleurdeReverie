<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <title>Fleur De R&eacute;verie</title>
  </head>

  <body>
    <header>
      <h1>Fleur De R&eacute;verie</h1>
      <navbar>
        <ul>
          <li><a href="/">Home</a></li>

          <li><a href="/flowers">All Flowers</a></li>

          <!-- Dropdown menu for occasions -->
          <li class="dropdown">
            <a href="#" class="dropbtn">Occasions</a>
            <div class="dropdown-content">
              <a href="/occasions?occasion=birthday">Birthday</a>
              <a href="/occasions?occasion=anniversary">Anniversary</a>
              <a href="/occasions?occasion=wedding">Wedding</a>
              <a href="/occasions?occasion=thankyou">Thank You</a>
            </div>
          </li>
          <!-- Basket Button -->
          <div class="basket-content">
            <a href="/basket">
              <img
                id="basketImage"
                src="/images/basket.png"
                alt="basket"
                width="30px"
              />
            </a>
          </div>

          <!-- Account Button -->
          <div class="account-content">
            <a href="/account">
              <img
                id="accountImage"
                src="/images/account.png"
                alt="account"
                width="30px"
              />
              </a>
              </div>
          </li>
        </ul>
      </navbar>
    </header>
    <main>
      <div class="signbg">
        <div class="signup-box">
          <h2>Register with Fleur De Revi&eacute;re Now!</h2>

          <form action="/register" method="post">
            <div class="container">
              <p>Please fill in this form to create an account</p>
              <hr />

              <label for="firstname"><b>First Name:</b></label>
              <input type="text" name="FirstName" id="firstname" required />

              <label for="lastname"><b>Last Name:</b></label>
              <input type="text" name="LastName" id="lastname" required />

              <label for="email"><b>Email Address:</b></label>
              <input type="email" name="email" id="email" required />

              <label for="password"><b>Password:</b></label>
              <input
                type="password"
                name="password"
                id="password"
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                minlength="8"
                required
              />
              <p1
                >The password should include 8 characters, an upper case letter,
                and a number</p1
              >

              <label for="password-repeat"><b>Repeat Password:</b></label>
              <input
                type="password"
                placeholder=""
                name="password-repeat"
                id="password-repeat"
                required
              />
              <hr />

              <button
                type="submit"
                class="registerbutton"
                onclick="return ansValidation()"
              >
                Register
              </button>
              <script>
                // FUNCTION TO MAKE SURE PASSWORDS MATCH
                function ansValidation() {
                  var passValue = document.getElementById("password").value;
                  var confpassValue =
                    document.getElementById("password-repeat").value;

                  if (passValue !== confpassValue) {
                    alert("Passwords do not match!");
                    return false;
                  } else {
                    return true;
                  }
                }
              </script>
            </div>
            <div class="container login">
              <p>Already have an account? <a href="/login">Sign in</a>.</p>
            </div>
          </form>
        </div>
      </div>
    </main>
    <footer>
      <p>&copy; 2023 Fleur de R&eacute;viere</p>
    </footer>

    <script src="/js/client.js"></script>
  </body>
</html>
