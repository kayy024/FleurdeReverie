<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <title><%= selectedOccasion %> - Fleur De R&eacute;verie</title>
  </head>

  <body>
    <header>
      <h1>Fleur De R&eacute;verie</h1>
      <navbar>
        <ul>
          <li><a href="/">Home</a></li>

          <li><a href="/flowers">All Flowers</a></li>

          <!-- Dropdown menu for occasions -->
          <li class="dropdown">
            <a href="#" class="dropbtn">Occasions</a>
            <div class="dropdown-content">
              <a href="/occasions?occasion=Birthday">Birthday</a>
              <a href="/occasions?occasion=Anniversary">Anniversary</a>
              <a href="/occasions?occasion=Wedding">Wedding</a>
              <a href="/occasions?occasion=Thank You">Thank You</a>
            </div>
          </li>
          <!-- Basket Button -->
          <div class="basket-content">
            <a href="/basket">
              <img
                id="basketImage"
                src="/images/basket.png"
                alt="basket"
                width="30px"
              />
            </a>
          </div>
          <!-- Account Button -->
          <div class="account-content">
            <a href="/account">
              <img
                id="accountImage"
                src="/images/account.png"
                alt="account"
                width="30px"
              />
            </a>
          </div>
        </ul>
      </navbar>
    </header>
    <main>
      <h2><center><%= selectedOccasion %> Bouquets</center></h2>
      <div class="prodbyoccasion" id="productsContainer">
        <% if (products && products.length > 0) { %> <%
        products.forEach(function(product) { %>
        <div class="flower">
          <h3><%= product.name %></h3>
          <img src="/images/<%= product.image %>" alt="<%= product.name %>" />
          <p>Price: Â£<%= product.price.toFixed(2) %></p>
          <button onclick="addToBasket('<%= product.id %>')">
            Add to Basket
          </button>
          <a href="/flower/details/<%= product.id %>">
            <button>View Details</button>
          </a>
        </div>
        <% }); %> <% } else { %>
        <p>No products available for this occasion.</p>
        <% } %>
      </div>
    </main>
    <footer>
      <p>&copy; 2023 Fleur de R&eacute;viere</p>
    </footer>

    <script>
      async function addToBasket(productId) {
        try {
          const response = await fetch(`/api/add-to-basket/${productId}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });
          if (!response.ok) {
            throw new Error("Failed to add product to basket");
          }

          console.log("Product added to basket:", productId);
        } catch (error) {
          console.error("Error adding product to basket:", error.message);
        }
      }

      function viewProductDetails(productId) {
        console.log("Viewing details for product:", productId);
      }
    </script>
  </body>
</html>
