<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <title>Fleur De R&eacute;verie</title>
  </head>

  <body>
    <header>
      <h1>Fleur De R&eacute;verie</h1>
      <navbar>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/flowers">All Flowers</a></li>
          <!-- Dropdown menu for occasions -->
          <li class="dropdown">
            <a href="#" class="dropbtn">Occasions</a>
            <div class="dropdown-content">
              <a href="/occasions?occasion=birthday">Birthday</a>
              <a href="/occasions?occasion=anniversary">Anniversary</a>
              <a href="/occasions?occasion=wedding">Wedding</a>
              <a href="/occasions?occasion=thankyou">Thank You</a>
            </div>
          </li>
          <!-- Basket Button -->
          <div class="basket-content">
            <a href="/basket">
              <img
                id="basketImage"
                src="/images/basket.png"
                alt="basket"
                width="30px"
              />
            </a>
          </div>
          <!-- Account Button -->
          <div class="account-content">
            <a href="/account">
              <img
                id="accountImage"
                src="/images/account.png"
                alt="account"
                width="30px"
              />
            </a>
          </div>
        </ul>
      </navbar>
    </header>
    <main>
      <div class="account-section">
        <h2>My Account</h2>
        <ul>
          <li>
            <h3>My Orders</h3>
          </li>
          <li><p>You haven't placed any orders yet.</p></li>
        </ul>
        <h3>Primary Addresses</h3>
        <a href="/edit-addresses">EDIT ADDRESSES</a>
        <h3>Loyalty</h3>
        <p>
          Fleur de R&eacute;viere's Loyalty scheme for customers. Convert your
          purchases into money off by collecting points!
        </p>
        <p>
          Welcome <span id="userWelcome"><%= userName %></span>, you have earned
          0 points
        </p>
        <button onclick="window.location.href='/logout'" id="logoutButton">
          LOG OUT
        </button>
      </div>
    </main>
    <footer>
      <p>&copy; 2023 Fleur de R&eacute;viere</p>
    </footer>

    <script src="/js/client.js"></script>
    <script>
      // Check if the user is logged in
      const isLoggedIn = localStorage.getItem("isLoggedIn");

      // Function to handle user logout
      function logout() {
        localStorage.removeItem("isLoggedIn");
        // Add any additional logic you need for user logout
        updateUI();
      }

      // Function to update UI based on login status
      function updateUI() {
        const logoutButton = document.getElementById("logoutButton");
        const loginButton = document.getElementById("loginButton");
        const myAccountSection = document.getElementById("myAccountSection");

        if (isLoggedIn) {
          // User is logged in
          logoutButton.style.display = "block";
          myAccountSection.style.display = "block";

          document.getElementById("name").textContent = "Name: John Doe";
          document.getElementById("userWelcome").textContent = "John";
        } else {
          // User is logged out
          logoutButton.style.display = "none";
          myAccountSection.style.display = "none";
        }
      }

      // Attach event listeners
      document.getElementById("logoutButton").addEventListener("click", logout);

      // Initial UI update
      updateUI();
    </script>
  </body>
</html>
